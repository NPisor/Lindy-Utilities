<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/rounded_background"
    android:elevation="4dp"
    android:layout_margin="4dp">

    <!-- Employee Name -->
    <TextView
        android:id="@+id/tvEmployeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <!-- Employee Phone -->
    <TextView
        android:id="@+id/tvEmployeePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Shift -->
    <TextView
        android:id="@+id/tvShift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shift: "
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Job -->
    <TextView
        android:id="@+id/tvJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job: "
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Foreman -->
    <TextView
        android:id="@+id/tvForeman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foreman: "
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Foreman Phone -->
    <TextView
        android:id="@+id/tvForemanPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foreman Phone: "
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Crew -->
    <TextView
        android:id="@+id/tvCrew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crew: "
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Job Address -->
    <TextView
        android:id="@+id/tvJobAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <!-- Hidden Tray for Call and Message -->
    <LinearLayout
        android:id="@+id/trayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"/>
    </LinearLayout>

</LinearLayout>
